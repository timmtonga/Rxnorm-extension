<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
  <h3 class="modal-title" id="lineModalLabel">Confirm search term match</h3>
  <b>Search Term :</b> <%= @item.search_term %><br/><b>Potential Matches :</b> <%= @item.matches %>
</div>
<%= form_for :search_item, method: :PATCH, url: @item,authenticity_token: true,html: {id: 'confirmMatch'} do |f| %>
    <div class="modal-body">
      <% (@options || []).each do |key,value| %>
          <div class="form-group has-feedback">
            <label class="input-group" style="">
                          <span class="input-group-addon">
                              <input type="radio" name="confirmed_matches" value="<%=key%>" required="true"/>
                          </span>
              <div class="form-control form-control-static">
                <%= @options[key]%>
              </div>
              <span class="glyphicon form-control-feedback "></span>
            </label>
          </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      <%= f.submit 'Confirm Match', class:"btn btn-success"%>
    </div>
<% end %>



