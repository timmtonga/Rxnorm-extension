<div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
        <h3 class="modal-title" id="lineModalLabel">New Batch Search</h3>
      </div>
      <%= form_for :batch_job,authenticity_token: true,remote: true do |f| %>
          <div class="modal-body">
            <div class="form-group">
              Name of new batch
              <%= f.text_field :description ,class: 'form-control', required: true%>
            </div>
            <div class="form-group">
              File location
              <%= f.file_field :file, required: true%>
            </div>
          </div>
          <div class="modal-footer">
            <div class="btn-group btn-group-justified" role="group" aria-label="group button">
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" data-dismiss="modal"  role="button">Close</button>
              </div>
              <div class="btn-group btn-delete hidden" role="group">
                <button class="btn btn-default btn-hover-red" data-dismiss="modal" role="button">Delete</button>
              </div>
              <div class="btn-group" role="group">
                <%= f.submit 'Save', class:"btn btn-default btn-hover-green"%>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 3vh;">
  <div class="col-md-3 col-md-offset-1">
    <h3>Previous Batch Searches</h3>
  </div>
  <div class="col-md-3 col-md-offset-3">
    <div style="display: table-row">
      <div style="display: table-cell">
        <form action="#" method="get">
          <div class="input-group">
            <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
            <input class="form-control" id="system-search" name="q" placeholder="Filter past searches" required>
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
            </span>
          </div>
        </form>
      </div>
      <div style="display: table-cell">
        <div class="input-group" style="margin-left: 1vw;text-align: right;">
            <span class="input-group-btn">
              <button type="button" data-toggle="modal" data-target="#squarespaceModal" class="btn btn-labeled btn-primary">
                <span class="btn-label"><i class="glyphicon glyphicon-plus-sign"></i></span>New Batch Search</button>
            </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <table class="table table-striped table-bordered custab">
      <thead>
      <tr>
        <th>Batch Name</th>
        <th>Date Initiated</th>
        <th>Coverage Percentage</th>
        <th>Status</th>
        <th style="text-align: center">Action</th>
      </tr>
      </thead>
      <tbody>
      <% (@records || []).each do |search| %>
          <tr>
            <td><%= search.batch_name %></td>
            <td><%= search.created_at.strftime('%d-%b-%Y %H:%M') %></td>
            <td><%= 0 %></td>
            <td><%= search.status %></td>
            <td class="text-center">
              <%= link_to "<span class='glyphicon glyphicon-eye-open'></span> View".html_safe,
                          "/batch_jobs/#{search.id}",class: 'btn btn-info btn-xs', remote: true %>

            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

