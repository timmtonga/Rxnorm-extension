<div class="row" style="margin-top: 3vh;">
  <div class="col-md-3 col-md-offset-1">
    <h3>Previous Batch Searches</h3>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div style="display: table-row">
      <div style="display: table-cell">
        <div class="input-group" style="margin-left: 1vw;text-align: right;">
            <span class="input-group-btn">
              <%= link_to "<span class='btn-label'><i class='glyphicon glyphicon-plus-sign'></i></span> New batch search".html_safe,
                          '/batch_jobs/new',class: 'btn btn-primary',
                          'data-toggle' => 'modal', 'data-target'=> '#appModal', 'data-remote' => 'true' %>

            </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <table id="batchJobs" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Batch Name</th>
        <th>Date Initiated</th>
        <th>Coverage Percentage</th>
        <th>Status</th>
        <th style="text-align: center">Action</th>
      </tr>
      </thead>
      <tbody>
      <% (@records || []).each do |search| %>
          <tr>
            <td><%= search.batch_name %></td>
            <td><%= search.created_at.strftime('%d-%b-%Y %H:%M') %></td>
            <td style="padding-left: 5px;"><%= search.display_coverage %></td>
            <td><%= search.status %></td>
            <td class="text-center">
              <%= link_to "<span class='glyphicon glyphicon-eye-open'></span> View".html_safe,
                          "/batch_jobs/#{search.id}",class: 'btn btn-primary', remote: true %>

            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
    var table = $('#batchJobs').DataTable({"lengthChange": false, "pageLength":13});
</script>