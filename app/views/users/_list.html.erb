 <div class="row" style="margin-top: 3vh;">
   <div class="col-md-3 col-md-offset-1">
     <h3>Authorized Users</h3>
   </div>
    <div class="col-md-3 col-md-offset-3">
      <div style="display: table-row">
        <div style="display: table-cell">
          <form action="#" method="get">
            <div class="input-group">
              <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
              <input class="form-control" id="system-search" name="q" placeholder="Filter users" required>
              <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
            </div>
          </form>
        </div>
        <div style="display: table-cell">
          <div class="input-group" style="margin-left: 1vw;text-align: right;">
            <span class="input-group-btn">
                        <button type="button" class="btn btn-labeled btn-primary">
                <span class="btn-label"><i class="glyphicon glyphicon-plus-sign"></i></span>Add User</button>
            </span>
          </div>
        </div>
      </div>
    </div>
 </div>

 <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <table class="table table-striped table-bordered custab">
        <thead>
        <tr>
          <th>User's Name</th>
          <th>Email Address</th>
          <th style="text-align: center">Action</th>
        </tr>
        </thead>
        <tbody>
        <% (@users || []).each do |user| %>
            <tr>
              <td><%= user['name']%></td>
              <td><%= user['email']%></td>
              <td class="text-center">
                <a class='btn btn-info btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                <a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
 </div>

 <script type="text/javascript">
     $(document).ready(function() {
         var activeSystemClass = $('.list-group-item.active');

         //something is entered in search form
         $('#system-search').keyup( function() {
             var that = this;
             // affect all table rows on in systems table
             var tableBody = $('.table-list-search tbody');
             var tableRowsClass = $('.table-list-search tbody tr');
             $('.search-sf').remove();
             tableRowsClass.each( function(i, val) {

                 //Lower text for case insensitive
                 var rowText = $(val).text().toLowerCase();
                 var inputText = $(that).val().toLowerCase();
                 if(inputText != '')
                 {
                     $('.search-query-sf').remove();
                     tableBody.prepend('<tr class="search-query-sf"><td colspan="6"><strong>Searching for: "'
                         + $(that).val()
                         + '"</strong></td></tr>');
                 }
                 else
                 {
                     $('.search-query-sf').remove();
                 }

                 if( rowText.indexOf( inputText ) == -1 )
                 {
                     //hide rows
                     tableRowsClass.eq(i).hide();

                 }
                 else
                 {
                     $('.search-sf').remove();
                     tableRowsClass.eq(i).show();
                 }
             });
             //all tr elements are hidden
             if(tableRowsClass.children(':visible').length == 0)
             {
                 tableBody.append('<tr class="search-sf"><td class="text-muted" colspan="6">No entries found.</td></tr>');
             }
         });
     });
 </script>